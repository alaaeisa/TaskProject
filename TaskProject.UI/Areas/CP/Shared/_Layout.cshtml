    <!-- Page JS -->
    <script>
        function ChangeLanguage(lang) {
            $.ajax({
                url: '/Home/SetCulture?culture=' + lang,
                cache: false,
                contentType: false,
                processData: false,
                type: "POST",
                success: function (data) {
                    //TODO: Add whatever if you want to pass a notification back
                    location.reload();
                },
                error: function (error) {
                    //TODO: Add some code here for error handling or notifications
                }
            })
        }
        function changePassword() {
            beginLoading('body');
            var modal = $('#changePasswordModal');
            $('#changePasswordModal .modal-dialog').load('/CP/Account/ChangePassword', () => {
                finishLoading('body');
                $.validator.unobtrusive.parse(modal);
                $("#changePasswordModal").modal('show');
            })
        }
        function onChangePWModalSuccess(response) {
            if (response.isSuccess) {
                showSuccessMessage();
                $("#changePasswordModal").modal('hide');
            }
            else {
                var msg = '';
                response.errors.forEach((error, i) => msg += error + '<br>');
                showErrorMessage(msg);
            }
        }
    </script>
